@model RecipeBook.Models.Steps
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" data-rocket-async="style" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    @{
        ViewData["Title"] = "Details";
    }
    <style>
        body {
            background-image: url('https://scontent.fsof9-1.fna.fbcdn.net/v/t1.15752-9/186141382_462260254872690_6777040315924265316_n.png?_nc_cat=104&ccb=1-3&_nc_sid=ae9488&_nc_ohc=IBDZqebWLqIAX8nbUsJ&_nc_ht=scontent.fsof9-1.fna&oh=34c765094b35fb862cb1379f6091eb79&oe=60D3269F');
            background-size: 100% 100%;
        }
    </style>
    <br />
    <h1>Steps detail</h1>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-marker fa-lg"></i></a> |
    <a asp-action="Index">
        <img src="https://media.discordapp.net/attachments/822377148144812042/846869808740827206/60577.png"
             width=30 height="20">
    </a>
    <hr />
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Number)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Photo
            </dt>
            <dd class="col-sm-10">
                <img src="@("~/image/"+Model.ImageName)" asp-append-version="true" width="500" height="400" alt="step" />
            </dd>
            <dt class="col-sm-2">
                For Recipe
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Recipe.Name)
            </dd>
        </dl>
    </div>
